<idea-plugin>
    <id>com.example.intellij-webview-sample</id>
    <name>IntelliJ WebView Terminal Sample</name>
    <vendor email="test@example.com" url="https://example.com">Example Vendor</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.plugins.terminal</depends>

    <extensions defaultExtensionNs="com.intellij">
        <projectService serviceImplementation="com.example.intellijwebviewsample.TerminalProcessService"/>
        <toolWindow id="WebView Terminal"
                    anchor="bottom"
                    canCloseContent="true"
                    icon="AllIcons.Debugger.Console"
                    factoryClass="com.example.intellijwebviewsample.TerminalToolWindowFactory"/>
    </extensions>
</idea-plugin>
